---
import { Image } from "astro:assets";
import logo from "~/assets/logo.png";
---

<div class="flex gap-x-1 sm:gap-x-2 shrink-0">
  <Image
    class="h-20 w-20 sm:h-24 sm:w-24 lg:h-[108px] lg:w-[108px] shrink-0 object-cover object-top"
    src={logo}
    alt="SSU Logo"
  />
  {
    !Astro.props.sm && (
      <div class="flex flex-col justify-evenly self-stretch">
        <h1 class="font-serif text-3xl sm:text-4xl lg:text-6xl text-orange-600">
          Sri Sri University
        </h1>
        <h2 class="lg:ml-1 w-max rounded-md bg-orange-500 px-0.5 sm:px-1 lg:px-2 text-sm sm:text-base lg:text-2xl text-white">
          Faculty of Emerging Technology
        </h2>
      </div>
    )
  }
</div>

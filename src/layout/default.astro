---
import "~/style.css";
import Logo from "~/components/home/Logo.astro";
import NavItem from "~/components/home/NavItem.astro";
import SlideOver from "~/components/ui/slide-overs.vue";

const navItems = [
  {
    label: "Home",
    path: "/",
  },
  {
    label: "About Us",
    path: "/about",
  },
  {
    label: "Courses",
    path: "/courses",
  },
  [
    {
      label: "Updates",
      path: "/updates",
    },
    {
      label: "Contact Us",
      path: "/contact-us",
    },
  ],
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tailwindcss Installation</title>
  </head>
  <body class="bg-white min-h-screen w-full flex flex-col items-center">
    <header
      class="max-w-screen-xl w-full flex items-center justify-between p-2 sm:p-3 md:p-3.5 lg:p-4"
    >
      <Logo />
      <nav class="">
        <SlideOver
          client:media="(max-width: 640px)"
          navItems={navItems.flat()}
        />
        <ul
          class="hidden sm:flex justify-center sm:justify-end sm:gap-1 md:gap-2 flex-wrap"
        >
          {
            navItems.map((navItem) =>
              Array.isArray(navItem) ? (
                <>
                  <div class="flex items-center gap-x-2">
                    {navItem.map(({ label, path }) => (
                      <NavItem label={label} path={path} />
                    ))}
                  </div>
                </>
              ) : (
                <NavItem label={navItem.label} path={navItem.path} />
              )
            )
          }
        </ul>
      </nav>
    </header>
  </body>
  <slot />
  <footer class="bg-orange-500">
    <div
      class="flex flex-col sm:flex-row justify-evenly items-center gap-7 p-3 flex-wrap"
    >
      <div class="flex flex-col items-center gap-y-2">
        <Logo sm />
        <h2
          class="text-white uppercase font-medium text-xs xs:text-sm sm:text-base"
        >
          Sri Sri University
        </h2>
      </div>
      <ul class="flex flex-col text-center gap-0.5">
        <li><a class="text-lg">FACULTIES :-</a></li>
        <li>
          <a
            class="px-3 hover:bg-orange-600 hover:rounded-full hover:text-white text-white font-semibold"
            >SUDHIR SIR</a
          >
        </li>
        <li>
          <a
            class="px-3 hover:bg-orange-600 hover:rounded-full hover:text-white text-white font-semibold"
            >R.N.SATPATHI</a
          >
        </li>
        <li>
          <a
            class="px-3 hover:bg-orange-600 hover:rounded-full hover:text-white text-white font-semibold"
            >ABCD</a
          >
        </li>
        <li>
          <a
            class="px-3 hover:bg-orange-600 hover:rounded-full hover:text-white text-white font-semibold"
            >ABCD</a
          >
        </li>
        <li>
          <a
            href="/faculties/"
            class="px-3 hover:bg-orange-600 hover:rounded-full hover:text-white text-white font-semibold"
            >SEE ALL-></a
          >
        </li>
      </ul>
      <ul class="flex flex-col text-center gap-0.5">
        <li><a class="text-lg">CATEGORIES :-</a></li>
        <li>
          <a
            class="px-3 hover:bg-orange-600 hover:rounded-full hover:text-white text-white font-semibold"

---
import Default from "~/layout/default.astro";
import Faculties from "~/pages/faculties.astro";

const courses = [
  {
    label:
      "B.tech Computer Science Specialization in Artificial Intelligence and Machine Learning",
    img: "https://images.unsplash.com/photo-1516110833967-0b5716ca1387?q=80&w=2574&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
  },
  {
    label: "B.tech Computer Science Specialization in Data Science",
    img: "https://images.unsplash.com/3/doctype-hi-res.jpg?q=80&w=2665&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
  },
  {
    label: "B.tech Computer Science Specialization in Cyber Security",
    img: "https://images.unsplash.com/photo-1620825937374-87fc7d6bddc2?q=80&w=2662&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
  },
];
---

<script>
  var cscroll=1;
  function carouselslider()
  {
    const slider=document.getElementById("slider");
    if(cscroll==3)
    {
      slider.scrollLeft-=window.innerWidth;
      cscroll=1;
      return;
    }
    else
    {
      slider.scrollLeft+=window.innerWidth/2;
      cscroll+=1;
      return;
    }
  }
  setInterval(carouselslider, 4000);
  carouselslider();
</script>

<Default>
  <main class="flex flex-col gap-y-12">
    <div class="flex flex-col sm:flex-row gap-8 mx-8 py-10">
      <div class="h-96 w-10/12 m-auto bg-slate-200 rounded-2xl sm:flex"></div>
      <div class="h-96 w-10/12 m-auto">
        <section class="container">
          <div class="slider-wrapper max-h-96">
            <div id="slider" class="slider max-h-96 rounded-2xl">
              <img class="rounded-2xl" src="https://images.unsplash.com/photo-1657070174397-569b53c68e29?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Wallpaper" id="slide-1">
              <img class="rounded-2xl" src="https://images.unsplash.com/photo-1657070174397-569b53c68e29?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Wallpaper" id="slide-2">
              <img class="rounded-2xl" src="https://images.unsplash.com/photo-1657070174397-569b53c68e29?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Wallpaper" id="slide-3">
            </div>
            <div class="slider-nav">
              <a href="#slide-1"></a>
              <a href="#slide-2"></a>
              <a href="#slide-3"></a>
            </div>
          </div>
        </section>
      </div>
    </div>
    <section class="p-4">
      <h2 class="mb-8 text-4xl font-semibold text-center">Major Courses</h2>
      <div class="w-full">
        <ul
          class="flex w-full flex-wrap justify-around items-stretch gap-4 sm:flex-nowrap"
        >
          {
            courses.map((course) => (
              <li class="relative">
                <div class="absolute inset-0 z-0 h-full w-full rounded-lg bg-gradient-to-b from-black/20 to-transparent" />
                <div
                  style={{
                    "background-image": `url(${course.img});`,
                  }}
                  class="aspect-square w-full h-full xs:max-w-[256px] sm:max-w-xs sm:aspect-[16/10] rounded-lg bg-cover bg-no-repeat p-4 flex flex-col"
                >
                  <h2
                    style="text-shadow:0px 3px 3px rgba(0, 0, 0, 0.25);"
                    class="relative z-10 text-xl text-white"
                  >
                    {course.label}
                  </h2>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                    stroke="currentColor"
                    class="h-6 w-6 text-white absolute right-2 top-2"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                    />
                  </svg>
                </div>
              </li>
            ))
          }
        </ul>
      </div>
    </section>
  </main>
</Default>
---
import Default from "~/layout/default.astro";
import Carousel from "~/components/home/carousel.astro";
import Testimonial from "~/components/home/Testimonial.astro";

const courses = [
  {
    label:
      "B.tech Computer Science Specialization in Artificial Intelligence and Machine Learning",
    img: "https://images.unsplash.com/photo-1516110833967-0b5716ca1387?q=80&w=2574&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
  },
  {
    label: "B.tech Computer Science Specialization in Data Science",
    img: "https://images.unsplash.com/3/doctype-hi-res.jpg?q=80&w=2665&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
  },
  {
    label: "B.tech Computer Science Specialization in Cyber Security",
    img: "https://images.unsplash.com/photo-1620825937374-87fc7d6bddc2?q=80&w=2662&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
  },
];
---
